<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".BuyActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/tvback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_btnback"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/tabbuy"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/relativeLayout1"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="配置交易方式：" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:background="@drawable/shape_edittext"
        android:paddingTop="4dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >
            <TextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawableLeft="@drawable/divider"
                android:layout_marginLeft="10dp"
                android:text="选择行业:" />
            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:maxLength="11"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="价格≤" />
            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:maxLength="11"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >
            <TextView
                android:id="@+id/textView6"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="权重≥" />
            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:maxLength="11"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edittext"
        android:layout_below="@+id/LinearLayout1" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:button="@null"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_checkbox_ok"/>
    	<TextView
    	    android:id="@+id/textView7"
    	    android:layout_width="60dp"
    	    android:layout_height="match_parent"
    	    android:gravity="center"
    	    android:singleLine="true"
    	    android:layout_weight="1"
    	    android:layout_gravity="center"
    	    android:text="服务站" />
    	<TextView
    	    android:id="@+id/textView7"
    	    android:layout_width="60dp"
    	    android:layout_height="match_parent"
    	    android:gravity="center"
    	    android:singleLine="true"
    	    android:layout_gravity="center"
    	    android:layout_weight="1"
    	    android:text="分类" />
    	<TextView
    	    android:id="@+id/textView7"
    	    android:layout_width="31dp"
    	    android:layout_height="match_parent"
    	    android:gravity="center"
    	    android:layout_gravity="center"
    	    android:text="权重" />
    	<TextView
    	    android:id="@+id/textView7"
    	    android:layout_width="31dp"
    	    android:layout_height="match_parent"
    	    android:gravity="center"
    	    android:layout_gravity="center"
    	    android:text="PR" />
    	<TextView
    	    android:id="@+id/textView7"
    	    android:layout_width="60dp"
    	    android:layout_height="match_parent"
    	    android:gravity="center"
    	    android:singleLine="true"
    	    android:layout_gravity="center"
    	    android:layout_weight="1"
    	    android:text="百度收录" />
    	<TextView
    	    android:id="@+id/textView7"
    	    android:layout_width="60dp"
    	    android:layout_height="match_parent"
    	    android:layout_weight="1"
    	    android:gravity="center"
    	    android:singleLine="true"
    	    android:layout_gravity="center"
    	    android:text="价格/月" />
    </LinearLayout>

	<RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/LinearLayout2"
        android:background="@color/white"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/tab_buy" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="还没有流量购买订单，点击购买" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvspread"
        android:layout_below="@+id/LinearLayout2"
        android:background="@color/white" >

    </ListView>

    <TextView
        android:id="@+id/tvspread"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_btnwhite"
        android:text="推广设定" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listView1"
        android:background="@color/gray" />

</RelativeLayout>