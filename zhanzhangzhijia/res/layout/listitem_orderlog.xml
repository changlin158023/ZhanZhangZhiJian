<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <TextView
            android:layout_width="0.01dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/black" />

        <TextView
            android:layout_width="0.01dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/black" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="40.0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <RelativeLayout
                android:layout_width="100.0dp"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/orderlogtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="时间" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150.0dp"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/orderlogcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="内容" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="70.0dp"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/orderloguser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="用户" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0.01dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/orderloguser"
                    android:layout_alignParentLeft="true"
                    android:background="@color/black" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>