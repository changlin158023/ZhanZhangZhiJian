<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient" android:fitsSystemWindows="true" 
    tools:context=".LoginActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentLeft="true" 
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/tvback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_btnback"
            />

        <TextView
            android:id="@+id/textView2" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/forget"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scrollbars="none"
        android:background="@color/pink"
        android:layout_below="@+id/relativeLayout1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@color/white" >

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="10dp"
                    android:hint="新密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="#a9b7b7" />

                <ImageView
                    android:id="@+id/imdelete2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/icon_guanbi"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear1"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv2"
                android:background="@color/white" >

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/telephone"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:maxLength="11"
                    android:hint="@string/telephone"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="#a9b7b7" />

                <ImageView
                    android:id="@+id/imdelete3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/icon_guanbi"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear2"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv3"
                android:background="@color/white" >

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/verification"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:maxLength="4"
                    android:hint="图片验证码"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="#a9b7b7" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray" />

                <ImageView
                    android:id="@+id/imsalt"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/selector_btnwhite"
                    android:gravity="center"
                    android:src="@color/gray"
                    android:textColor="@color/dark_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear3"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv4"
                android:background="@color/white" >

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/telephone"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:hint="@string/verification"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="#a9b7b7" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tvverification"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_edittext"
                    android:gravity="center"
                    android:src="@drawable/icon_guanbi"
                    android:text="获取验证码"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/linear4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_mainbtn"
                android:gravity="center"
                android:text="@string/确定"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>