<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp" 
    android:background="@color/white">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/dark_gray"
        android:text="更改密码" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

			<EditText
			    android:id="@+id/etoldpass"
			    android:layout_width="wrap_content"
			    android:layout_height="40dp"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:layout_toRightOf="@+id/textView2"
			    android:background="@drawable/shape_edittext"
			    android:inputType="textPassword"
			    android:maxLength="20"
			    android:paddingLeft="10dp"
			    android:paddingRight="30dp"
			    android:singleLine="true" />

			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_margin="10dp"
			    android:text="旧密码：" />

			<ImageView
			    android:id="@+id/imdelete"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_alignRight="@+id/etoldpass"
			    android:layout_centerVertical="true"
			    android:src="@drawable/icon_guanbi"
			    android:visibility="invisible" />

        </RelativeLayout>
		<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_margin="10dp"
			    android:text="新密码：" />

			<EditText
			    android:id="@+id/etnewpass1"
			    android:layout_width="wrap_content"
			    android:layout_height="40dp"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:layout_toRightOf="@+id/textView2"
			    android:background="@drawable/shape_edittext"
			    android:inputType="textPassword"
			    android:maxLength="20"
			    android:paddingLeft="10dp"
			    android:paddingRight="30dp"
			    android:singleLine="true" />

			<ImageView
			    android:id="@+id/imdelete2"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:src="@drawable/icon_guanbi"
			    android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

			<TextView
			    android:id="@+id/textView2"
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_margin="10dp"
			    android:text="确认密码：" />

			<EditText
			    android:id="@+id/etnewpass2"
			    android:layout_width="wrap_content"
			    android:layout_height="40dp"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:layout_toRightOf="@+id/textView2"
			    android:background="@drawable/shape_edittext"
			    android:inputType="textPassword"
			    android:maxLength="20"
			    android:paddingLeft="10dp"
			    android:paddingRight="30dp"
			    android:singleLine="true" />

			<ImageView
			    android:id="@+id/imdelete3"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:src="@drawable/icon_guanbi"
			    android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/linear1"
            android:background="@color/gray" >

            <TextView
                android:id="@+id/tvcancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_btnblue"
                android:text="@string/取消" />

            <TextView
                android:id="@+id/tvok"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/selector_mainbtn"
                android:textColor="@color/white"
                android:text="@string/确定">
            </TextView>

        </LinearLayout>
</RelativeLayout>
